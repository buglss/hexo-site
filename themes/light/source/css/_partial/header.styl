#header
  text-shadow 0 0 1px #fff
  margin 2.5rem auto
  @media screen and (max-width: 600px)
    margin 1rem auto
  a
    color color-ligth
    &:hover
      color color-link
      text-decoration none
    
  h1
    font-weight normal
    font-size 2.5em
    line-height 1

  h2
    font-weight normal
    font-size 0.9em
    line-height 1
    margin-top 10px
  
  #main-nav
    font-family font-title
    line-height 2.5em
    margin .5rem 0
    padding .5rem 0
    @media screen and (max-width: 600px)
      border-top 1px solid color-border
    ul
      list-style none
      li
        display inline-block
        margin 0 15px