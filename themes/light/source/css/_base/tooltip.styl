.tool
    position relative
    &::after
        background #3E474F
        border-radius 15px 90px 30px 15px
        bottom 180%
        color #EDEFF0
        content attr(data-tip)
        margin-left -8.75em
        padding 1em
        transition all .3s cubic-bezier(.84,-0.18,.31,1.26) .2s
        transform scale(.6) translateY(50%)
        width 17.5em

.tool:not(:first-child)::after
    left 0
    opacity 0
    position absolute
    z-index -100
	
.tool:first-child::after
    right 0
    opacity 0
    position absolute
    z-index -100

.tool:hover::after,
.tool:focus::after
    opacity 1
    transform scale(1) translateY(0)
    z-index 100

.tool:hover::after,
.tool:focus::after
    transition all .3s cubic-bezier(.84,-0.18,.31,1.26)

@media (max-width: 760px)
    .tool
        &::after
            font-size .75em
            margin-left -5em
            width 10em